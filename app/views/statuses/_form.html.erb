<%= form_with(model: status, remote: true, id: 'status_form') do |form| %>

  <div id='status form'>
    <%= render 'shared/error_messages', object: form.object %>

    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>


    <%= form.submit 'Save', class: 'btn btn-large btn-primary', id: 'new_status' %>
    <%= link_to 'Back', statuses_path, class:'badge' %>
  </div>
<% end %>
