<% provide(:title, 'Statuses') %>

<h1>Statuses list</h1>

<ul class='list-group'>

  <% @statuses.each do |status| %>
    <li class='list-group-item', id="status_<%= status.id %>">
      <%= status.name %>
      <%= link_to 'Destroy', status, method: :delete,
                  data: { confirm: 'Are you sure?' }, class:'badge delete', remote: true %>
      <%= link_to 'Edit', edit_status_path(status), class:'badge' %>
    </li>
  <% end %>

<%= link_to 'New Status', new_status_path, class: 'btn btn-primary' %>

</ul>
