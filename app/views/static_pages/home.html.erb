<% provide(:title, 'Home') %>
<div class='center jumbotron'>
  <h1>Welcome to the Tracking app</h1>

  <h2>
    This is the home page for the Tracking app
  </h2>

  <% if signed_in? %>

  <h2>
    You can find created ticket
  </h2>

  <div class='col-md-6 col-md-offset-3' >

    <%= form_tag(tickets_path, method: :get) do %>

    <%= text_field_tag :term, params[:term], class: 'form-control', required: true, placeholder: 'Enter param here' %>

    <%= button_tag(type: 'submit', class: 'btn btn-lg btn-primary', name: nil) do %>
      <span><i class='glyphicon glyphicon-search'></i> Search</span>
    <% end %>

  <% end %>

  </div>

  <% else %>
    <%= link_to 'Create ticket now!', new_ticket_path, class: 'btn btn-lg btn-primary' %>
  <% end %>

</div>
