<% provide(:title, 'Home') %>
<div class='center jumbotron'>
  <h1>Welcome to the Tracking app</h1>

  <h2>
    This is the home page for the Tracking app
  </h2>

  <%= link_to 'Create ticket now!', new_ticket_path, class: 'btn btn-lg btn-primary' %>

  <% if signed_in? %>

  <h2>
    or find created ticket
  </h2>

  <div class='col-md-6 col-md-offset-3' >

    <%= form_tag(tickets_path, method: :get) do %>

    <%= text_field_tag :term, params[:term], class: 'form-control', required: true %>
    <%= submit_tag 'Search', name: nil, class: 'btn btn-lg btn-primary' %>

    <% end %>

  </div>

  <% end %>

</div>
